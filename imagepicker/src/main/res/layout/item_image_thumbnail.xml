<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.fightcent.imagepicker.widget.SquareRelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_pick_image_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/picker_pick_image_foreground" />

        <ImageView
            android:id="@+id/iv_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/very_small_spacing"
            android:src="@drawable/picker_pick_box" />

    </com.fightcent.imagepicker.widget.SquareRelativeLayout>
</layout>